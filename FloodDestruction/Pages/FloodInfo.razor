@page "/finfo"
@using ClassLibraryDAL
@using ClassLibraryModel

<PageTitle>Flood Information</PageTitle>

<div class="mt-20">
    <!-- You can adjust the amount of margin as needed -->
    @foreach (var item in info_model)
    {
        <div class="max-w-full mx-auto p-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                <div class="rounded-lg shadow-md p-1 flex flex-col items-center relative">
                    <img src="@item.imageURL" />
                </div>
                <div class="rounded-lg shadow-md p-4">
                    <h1 class="text-xl font-semibold mb-4">@item.heading</h1>
                    <p>
                        @item.info
                    </p>

                    <div class="mt-4 flex flex-col sm:flex-row gap-2 ">
                        <a class="inline-flex h-10 items-center justify-center rounded-md bg-indigo-500 px-8 text-sm font-medium text-gray-50 shadow transition-colors hover:bg-gray-800/90 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-gray-950 disabled:pointer-events-none disabled:opacity-50 "
                           href="/remotemap">
                            Learn More
                        </a>

                        
                    </div>

                </div>
                

            </div>
        </div>
    }
</div>



@code {
    private HomeFloodInfoModel infoModel { get; set; } = new HomeFloodInfoModel();
    private string? msg { get; set; }

    private List<HomeFloodInfoModel> info_model = new List<HomeFloodInfoModel>();


    protected override void OnInitialized()
    {
        GetCities();
    }
    private void GetCities()
    {
        info_model = HomeFloodInfoDAL.GetInfo();
    }

}
